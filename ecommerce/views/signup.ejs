<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <script src="signup.js" defer></script>
    <link rel="stylesheet" href="authStyle.css">
</head>

<body>

    <%- include('./partials/header') %>

        <div class="form">
            <form id="signupForm">
                <h1>Sign up</h1>
                <hr>
                <div class="radio">
                    <div>
                        <input type="radio" name="type" value="1" checked>
                        <label for="customer">Buyer</label>
                    </div>
                    <div>
                        <input type="radio" name="type" value="2">
                        <label for="seller">Seller</label>
                    </div>
                </div>
                <label for="fName">First Name</label>
                <input type="text" name="fName" autocomplete="off" placeholder="Jhon" maxlength="15" required>
                <p class="fName error"></p>

                <label for="lName">Last Name</label>
                <input type="text" name="lName" autocomplete="off" placeholder="Doe" maxlength="15" required>
                <p class="lName error"></p>

                <label for="email">E-mail</label>
                <input type="email" name="email" autocomplete="off" placeholder="johndoe@gmail.com" required>
                <p class="email error"></p>

                <label for="password">Password</label>
                <input type="password" name="password" minlength="6" required>
                <p class="password error"></p>
                <div class="subBtn">
                    <input type="submit" value="Register">
                </div>
            </form>
        </div>

        <%- include('./partials/footer') %>

</body>

</html>